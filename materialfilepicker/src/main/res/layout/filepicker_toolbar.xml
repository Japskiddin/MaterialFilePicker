<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/colorPrimary"
    >

  <ImageView
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:id="@+id/iv_filepicker_toolbar_back"
      android:contentDescription="@null"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_centerVertical="true"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:textSize="16sp"
      android:text="@string/file_picker_app_name"
      android:textStyle="bold"
      android:gravity="center_vertical"
      android:textColor="@color/white"
      android:id="@+id/tv_filepicker_toolbar_title"
      android:layout_toRightOf="@id/iv_filepicker_toolbar_back"
      android:layout_toEndOf="@id/iv_filepicker_toolbar_back"
      android:layout_toLeftOf="@id/filepicker_toolbar_buttons"
      android:layout_toStartOf="@id/filepicker_toolbar_buttons"
      />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:id="@+id/filepicker_toolbar_buttons"
      android:layout_marginRight="16dp"
      android:layout_marginEnd="16dp"
      >

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_toolbar_add"
        android:contentDescription="@null"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_toolbar_check"
        android:contentDescription="@null"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        />

  </LinearLayout>

</RelativeLayout>