<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/colorPrimary"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:textSize="16sp"
      android:text="@string/file_picker_app_name"
      android:textStyle="bold"
      android:gravity="center_vertical"
      android:textColor="@color/white"
      android:id="@+id/tv_filepicker_toolbar_title"
      android:layout_toLeftOf="@id/iv_toolbar_add"
      android:layout_toStartOf="@id/iv_toolbar_add"
      />

  <ImageView
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_centerVertical="true"
      android:layout_marginRight="16dp"
      android:layout_marginEnd="16dp"
      android:id="@+id/iv_toolbar_add"
      android:contentDescription="@null"
      android:layout_toLeftOf="@id/iv_toolbar_check"
      android:layout_toStartOf="@id/iv_toolbar_check"
      />

  <ImageView
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_marginRight="16dp"
      android:layout_marginEnd="16dp"
      android:id="@+id/iv_toolbar_check"
      android:contentDescription="@null"
      />

</RelativeLayout>